<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <id.co.binar.connectdev.components.imageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="#aaa" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image_profile"
            android:orientation="vertical">

            <id.co.binar.connectdev.components.textview.ArialRoundedMtBold
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Full name"
                android:textColor="@color/textDark"
                android:textSize="16sp" />

            <id.co.binar.connectdev.components.textview.ArialRoundedMtBold
                android:id="@+id/text_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:layout_marginTop="4dp"
                android:text="User's Skill"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <id.co.binar.connectdev.components.textview.ArialRoundedMtBold
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="500 m"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

    </RelativeLayout>

    <id.co.binar.connectdev.components.textview.MontserratRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="About"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <id.co.binar.connectdev.components.textview.MontserratLight
        android:id="@+id/text_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc nec tellus efficitur, accumsan mauris ac, sagittis nulla."
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <id.co.binar.connectdev.components.textview.MontserratRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Add Note"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <EditText
            android:id="@+id/input_add_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="top|left"
            android:hint="note here..."
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <id.co.binar.connectdev.components.button.MontserratRegular
        android:id="@+id/button_add_send_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/profile_detail_background"
        android:text="Send Request"
        android:textColor="@color/white_0"
        android:visibility="visible" />

</LinearLayout>