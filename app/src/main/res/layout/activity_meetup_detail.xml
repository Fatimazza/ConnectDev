<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <id.co.binar.connectdev.components.toolbar.SimpleToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="#aaa" />

                <id.co.binar.connectdev.components.textview.MontserratBold
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Product Design Meetup"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <id.co.binar.connectdev.components.textview.MontserratRegular
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wednesday, 10 November 2017"
                    android:textColor="@color/textDark"
                    android:textSize="12sp" />

                <id.co.binar.connectdev.components.textview.MontserratRegular
                    android:id="@+id/text_time_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11AM - 1PM"
                    android:textColor="@color/textDark"
                    android:textSize="12sp" />

                <id.co.binar.connectdev.components.textview.MontserratSemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="About"
                    android:textColor="@color/textDark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/input_about"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/rectangle_background"
                    android:editable="false"
                    android:gravity="top|left"
                    android:hint="about meetup"
                    android:padding="16dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_location"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_location" />

                    <id.co.binar.connectdev.components.textview.MontserratRegular
                        android:id="@+id/text_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/image_location"
                        android:text="Jogja Digital Valley"
                        android:textColor="@color/textDark"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <id.co.binar.connectdev.components.imageview.CircleImageView
                                android:id="@+id/image_user_3"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginLeft="16dp"
                                android:src="#000" />

                            <id.co.binar.connectdev.components.imageview.CircleImageView
                                android:id="@+id/image_user_2"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginLeft="8dp"
                                android:src="#f11" />

                            <id.co.binar.connectdev.components.imageview.CircleImageView
                                android:id="@+id/image_user_1"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="#11f" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="8dp">

                            <id.co.binar.connectdev.components.imageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@color/violet_0" />

                            <id.co.binar.connectdev.components.textview.MontserratSemiBold
                                android:id="@+id/text_more_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="+1"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </FrameLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>
</LinearLayout>