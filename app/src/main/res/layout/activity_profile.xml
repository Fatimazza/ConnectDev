<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_profile_header"
        layout="@layout/layout_profile_header"/>

    <Button
        android:id="@+id/btn_friends"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/rl_profile_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:text="@string/profile_friends"
        android:textStyle="bold"
        android:textColor="@color/pink_1"
        android:background="@drawable/profile_gradient_stroke" />

    <include
        android:id="@+id/rl_profile_detail"
        layout="@layout/layout_profile_detail" />

</RelativeLayout>

