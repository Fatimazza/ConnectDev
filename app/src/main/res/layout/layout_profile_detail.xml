<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rl_profile_contact"
    android:layout_margin="16dp" >

    <id.co.binar.connectdev.components.textview.ArialRoundedMtBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_marginTop="7dp"
        android:textColor="#444444"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_about"
        android:lineSpacingExtra="1dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rectangle_background_selector"
        android:enabled="false"
        android:text="This field is describing me"/>

    <id.co.binar.connectdev.components.textview.ArialRoundedMtBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest"
        android:layout_marginTop="7dp"
        android:textColor="#444444"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_interest"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rectangle_background_selector"
        android:enabled="false"
        android:text="List of my interest" />

    <id.co.binar.connectdev.components.textview.ArialRoundedMtBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills"
        android:layout_marginTop="7dp"
        android:textColor="#444444"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_skill"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rectangle_background_selector"
        android:enabled="true"
        android:text="List of my skill" />

</LinearLayout>