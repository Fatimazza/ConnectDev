<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <id.co.binar.connectdev.components.textview.ArialRoundedMtBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="About"
        android:textColor="@color/textDark"
        android:textSize="16sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <id.co.binar.connectdev.components.textview.MontserratRegular
                android:id="@+id/text_user_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="16dp"
                android:text="This field is describing me"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_dribble"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_dribble" />

                <ImageView
                    android:id="@+id/image_github"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_github" />

                <ImageView
                    android:id="@+id/image_linkedin"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_linkedin" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <id.co.binar.connectdev.components.textview.ArialRoundedMtBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Interest"
        android:textColor="@color/textDark"
        android:textSize="18sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <id.co.binar.connectdev.components.textview.MontserratRegular
                android:id="@+id/text_user_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List of my interest"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <id.co.binar.connectdev.components.textview.ArialRoundedMtBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Skills"
        android:textColor="@color/textDark"
        android:textSize="18sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <id.co.binar.connectdev.components.textview.MontserratRegular
                android:id="@+id/text_user_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List of my skill"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>